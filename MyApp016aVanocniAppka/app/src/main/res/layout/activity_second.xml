<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redchris"
        />

    <TextView
        android:id="@+id/twInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="16sp"
        android:layout_gravity="center"
        />



    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="250dp"
        android:layout_height="360dp"
        android:background="@color/cardview_dark_background"
        android:layout_gravity="center"
        />



    <Button
        android:id="@+id/btnTakeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Přidat obrázek"
        android:layout_margin="16sp"
        android:backgroundTint="@color/redchris"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zpátky na přání"
        android:layout_margin="16sp"
        android:backgroundTint="@color/redchris"
        />

    <Button
        android:id="@+id/btnCreateCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vytvořit přáníčko"
        android:layout_margin="16sp"
        android:backgroundTint="@color/redchris"
        />


</LinearLayout>