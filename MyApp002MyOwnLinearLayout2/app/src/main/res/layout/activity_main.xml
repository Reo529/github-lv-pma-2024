<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte název poznámky"
            android:textColor="@color/myColour01"
            android:textSize="25dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <EditText
                android:id="@+id/etName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Zadejte jméno"
                android:textColor="@color/myColour01"
                android:layout_weight="1"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/etDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date|number"
                android:hint="Zadejte datum"
                android:textColor="@color/myColour02"
                android:layout_weight="1"
                />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte obsah poznámky"
            android:layout_marginTop="20dp"
            android:textColor="@color/myColour01"


            />
    </LinearLayout>




    <TextView
        android:id="@+id/tvInformation"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:hint="Text poznámky"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/btn_send"
        android:layout_weight="4"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/btn_delete"
        android:layout_weight="4"
        android:textSize="18sp"
        android:backgroundTint="@color/myColour03"
        android:textColor="@color/black"
        />
    </LinearLayout>

</LinearLayout>